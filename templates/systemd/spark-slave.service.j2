[Unit]
Description=Spark slave
After=network.target

[Service]
Type=forking
Environment=HADOOP_HOME={{ hadoop_home }}
WorkingDirectory={{ spark_home }}
ExecStart={{ spark_home }}/sbin/start-slave.sh {{ spark_master_url }}
User={{ hadoop_user }}
KillMode=process
KillSignal=SIGINT
Restart=on-failure

[Install]
WantedBy=multi-user.target
